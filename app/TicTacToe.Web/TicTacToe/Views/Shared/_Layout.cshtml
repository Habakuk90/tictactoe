<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @*[TODO] Render styles and scripts dynamically*@
    <link href="~/css/main.css" rel="stylesheet" />
    <script src="~/vendor/jquery.min.js"></script>
    
    <title>@ViewData["Title"] - Game</title>
</head>
<body>
    <nav>
        <ul class="nav-list__container">
            <li class="nav-list__item" data-link="/home">Home</li>
            <li class="nav-list__item" data-link="/games/tictactoe">Games</li>
        </ul>

        <ul class="nav-list__container--user">
            <li class="nav-list__item--user" data-link="/login">Login</li>
            <li class="nav-list__item--user" data-link="/register">Register</li>
            @if (!String.IsNullOrEmpty(Context.User.Identity.Name))
            { 
            <li class="nav-list__item--user" data-link="/logout">Logout @Context.User.Identity.Name</li>
            }
        </ul>
        
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />

    </div>
    <footer>
        <p>&copy; 2017 - Footer</p>
    </footer>

    <script src="~/js/main.js"></script>
</body>
</html>
