<section class="challenge">
    <div class="challenge__container">
        <h1 class="challenge__header"></h1>
        <span class="challenge__close-button">X</span>
        <div class="button-wrapper">
            <button class="button button-accept" v-on:click="accept">Accept</button>
            <button class="button button-decline" v-on:click="decline">Decline</button>
        </div>
    </div>

</section>


<script>
    var challengeModal = new Vue({
        el: '.challenge__container',
        data: {
            challenger: ''
        },
        created: function () {
            this.connection = new signalR.HubConnection("/game/")
        },
        mounted: function () {
            var that = this;
            that.connection.start();
            that.connection.on('Challenged', function (challenger) {
                var that = this;
                that.challenger = challenger
                $('section.challenge').addClass('active');
                
            });

        },
        methods: {
            closeModal: function () {
                var that = this;
                $('section.challenge').removeClass('active');

            },
            accept: function () {
                var that = this;
                that.connection.invoke('AcceptedChallenge', that.connection.challenger)

            }
        }
    });
</script>